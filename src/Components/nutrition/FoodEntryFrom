import React from 'react';

const moods = [
  { emoji: 'ğŸ˜«', label: 'FatiguÃ©', value: 1 },
  { emoji: 'ğŸ˜', label: 'Neutre', value: 3 },
  { emoji: 'ğŸ˜Š', label: 'Bien', value: 5 },
  { emoji: 'ğŸ¤©', label: 'GÃ©nial', value: 7 }
];

export default function MoodSelector({ onSelect }) {
  return (
    <div style={{ display: 'flex', justifyContent: 'space-around', padding: '20px' }}>
      {moods.map((m) => (
        <button 
          key={m.value}
          onClick={() => onSelect(m.value)}
          style={{ 
            background: 'none', border: 'none', fontSize: '40px', 
            cursor: 'pointer', transition: 'transform 0.2s' 
          }}
          onMouseEnter={(e) => e.target.style.transform = 'scale(1.2)'}
          onMouseLeave={(e) => e.target.style.transform = 'scale(1)'}
        >
          {m.emoji}
        </button>
      ))}
    </div>
  );
}