import React from 'react';
import { Search } from 'lucide-react';

export default function Command({ items }) {
  return (
    <div className="flex flex-col overflow-hidden rounded-xl bg-slate-900 border border-white/10 shadow-2xl max-w-md w-full">
      <div className="flex items-center border-b border-white/5 px-3 py-2">
        <Search className="mr-2 h-4 w-4 shrink-0 opacity-50 text-white" />
        <input 
          placeholder="Tapez une commande..." 
          className="flex h-10 w-full rounded-md bg-transparent py-3 text-sm outline-none text-white"
        />
      </div>
      <div className="max-h-[300px] overflow-y-auto p-2">
        {items.map((item, i) => (
          <div key={i} className="relative flex cursor-default select-none items-center rounded-sm px-2 py-1.5 text-sm text-gray-400 hover:bg-violet-600 hover:text-white outline-none">
            {item.label}
          </div>
        ))}
      </div>
    </div>
  );
}