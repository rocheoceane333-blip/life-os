import React from 'react';

export default function Chart({ title, children, height = "h-48" }) {
  return (
    <div className="w-full">
      {title && <h4 className="text-[10px] font-bold text-gray-500 uppercase mb-4 tracking-tighter">{title}</h4>}
      <div className={`${height} w-full flex items-end gap-1`}>
        {children}
      </div>
    </div>
  );
}