import React from 'react';

export default function Input({ type = "text", placeholder, value, onChange, className = "" }) {
  return (
    <input
      type={type}
      value={value}
      onChange={onChange}
      placeholder={placeholder}
      className={`
        w-full bg-black/40 border border-white/10 rounded-xl px-4 py-3 
        text-sm text-white placeholder:text-gray-600
        focus:outline-none focus:border-violet-500/50 focus:ring-1 focus:ring-violet-500/50
        transition-all duration-300 shadow-inner
        ${className}
      `}
    />
  );
}